{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lovnotifier",
  "version": "3.0.0",
  "identifier": "com.lovstudio.notifier",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:51420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "float",
        "title": "",
        "url": "/float.html",
        "width": 121,
        "height": 48,
        "x": 100,
        "y": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "acceptFirstMouse": true,
        "focus": false
      },
      {
        "label": "settings",
        "title": "Lovnotifier Settings",
        "url": "/",
        "width": 400,
        "height": 300,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/tray-icon.png"
    ]
  }
}
